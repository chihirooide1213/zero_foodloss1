<h1>ジャンル編集</h1>

<%= form_with model:@genre, url: clients_genre_path(@genre), local: true do |f| %>
<%= f.label :ジャンル %>
<%= f.text_field :name %>
<label ><%= f.radio_button :is_active, 1 , checked: true %>有効</label>
<label ><%= f.radio_button :is_active, 0 %>無効</label>
<%= f.submit "更新する" %>
<% end %>
