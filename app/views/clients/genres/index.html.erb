<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre, url: clients_genres_path, local: true do |f| %>
<%= f.label :ジャンル名 %>
<%= f.text_field :name %>

 <label ><%= f.radio_button :is_active, 1 , checked: true %>有効</label>
 <label ><%= f.radio_button :is_active, 0 %>無効</label>
<%= f.submit "追加" %>


<% end %>

<% @genres.each do |genre| %>
<%= genre.name %>
<%= link_to "編集する", edit_clients_genre_path(genre) %>
<% end %>
