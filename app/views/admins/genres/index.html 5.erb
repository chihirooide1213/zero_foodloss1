<div class="container">
	<h1>ジャンル一覧・追加</h1>

	<%= form_with model: @genre, url: admins_genres_path, local: true do |f| %>
		<%= f.label :ジャンル名 %>
		<%= f.text_field :name %>

		 <label ><%= f.radio_button :is_active, 1 , checked: true %>有効</label>
		 <label ><%= f.radio_button :is_active, 0 %>無効</label>
		<%= f.submit "追加" %>
	<% end %>

	<table>
		<% @genres.each do |genre| %>
		  <tr>
			<th><%= genre.name %></th>
			<td><%= link_to "編集する", edit_admins_genre_path(genre) %></td>
		  </tr>
		<% end %>
	</table>
</div>