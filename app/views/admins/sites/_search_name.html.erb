<div class="search-boxes">
	<%= form_with url: admins_sites_top_path, method: :get, local: true do |f| %>
	  <%= f.text_field :name, class: "search-form" %><i class="fas fa-search-plus"></i>
	  <%= f.submit :検索する %>
	<% end %>
</div>

<div class="search-box">
	<% search_items.each do |item| %>
		<div class="search">
			<%= attachment_image_tag item, :item_image,:fill, 100, 100, format: "jpeg" %>
			<p><%= link_to item.name, customers_item_path(item) %></p>
		</div>
	<% end %>
</div>