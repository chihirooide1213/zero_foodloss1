<div class="container">
	<h2>登録情報を編集する</h2>
	<%= form_with model: @customer, local: true ,url: customers_customer_path(@customer), html: { method: :put } do |f| %>
	 <table>
	    <tr>
	      <div class="field">
	        <th><%= f.label :名前 %></th>
	        <td>(姓)</td>
	        <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
	        <td>(名)</td>
	        <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
	      </div>
	    </tr>

	    <tr>
	      <div class="field">
	        <th><%= f.label :フリガナ %></th>
	        <td>(セイ)</td>
	        <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
	        <td>(メイ)</td>
	        <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
	      </div>
	    </tr>

	    <tr>
	      <div class="field">
	        <th><%= f.label :メールアドレス %></th>
	        <td></td>
	        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
	        <td></td>
	        <td></td>
	      </div>
	    </tr>

	    <tr>
	      <div class="field">
	        <th><%= f.label :郵便番号 %></th>
	        <td></td>
	        <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
	        <td></td>
	        <td></td>
	      </div>
	    </tr>

	    <tr>
	      <div class="field">
	        <th><%= f.label :住所 %></th>
	        <td></td>
	        <td colspan="3"><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
	        <td></td>
	        <td></td>
	      </div>
	    </tr>

	    <tr>
	      <div class="field">
	        <th><%= f.label :電話番号 %></th>
	        <td></td>
	        <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
	        <td></td>
	        <td></td>
	      </div>
	    </tr>
	    <tr>
	    <div class="field">
	    	<td><%= f.submit "更新する" %></td>
	    	<td></td>
	    	<td></td>
	    </div>
		</tr>
    </table>

	<% end %>
</div>
