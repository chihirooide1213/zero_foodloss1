<div id="confirm" class="container">

  <h2>注文情報確認</h2>

  <%= form_with(model: @order, url: customers_orders_path, local: true) do |f| %>

  <div class="row product-container">

    <div class="col-lg-8 col-md-8 col-xs-8">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <!-- 合計金額の変数定義 -->
          <% sum_all = 0 %>
          <% @cart_items.each do |cp| %>
          <tr>
            <td>
              <%= link_to customers_items_path(cp.item) do %>
                <%= attachment_image_tag(cp.item, :item_image, size: "150x100", fallback: "no_image.jpg") %>
                <%= cp.item.name %>
              <% end %>
            </td>
            <td><%= cp.item.price %>円</td>
            <td><%= cp.amount %></td>
            <td>
              <%= sum_item = (cp.item.price).to_i * cp.amount %>円
              <% sum_all += sum_item %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-lg-4 col-md-4 col-xs-4">
      <table class="table table-bordered">
        <tbody class="thead-light">
          <tr>
            <th>送料</th>
            <td><%= @order.shipping_cost %>円</td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td><%= sum_all.to_i %>円</td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td>
              <% total_payment = sum_all + @order.shipping_cost.to_i %>
              <%= total_payment.to_i %>円
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row space-sm bottom-box">
    <div class="col-lg-2">
      <h4>支払方法</h4>
    </div>
    <div class="col-lg-4">
      <% if @order.payment_method == 1 %>
        <p>クレジットカード</p>
      <% else %>
        <p>銀行振込</p>
      <% end %>
    </div>
  </div>

  <div class="row bottom-box">
    <div class="col-lg-2">
      <h4>お届け先</h4>
    </div>
    <div class="col-lg-4">
      〒 <%= @order.postal_code %>
      <%= @order.address %> <br>
      <%= @order.name %>
    </div>
  </div>

  <%= f.hidden_field :customer_id,    :value => current_customer.id %>
  <%= f.hidden_field :postal_code,  :value => "#{@order.postal_code}" %>
  <%= f.hidden_field :address,      :value => "#{@order.address}" %>
  <%= f.hidden_field :name,         :value => "#{@order.name}" %>
  <%= f.hidden_field :payment_method, :value => @order.payment_method %>
  <%= f.hidden_field :add, :value => @add %>

  <div class="row space">
    <div class="col-lg-2 offset-lg-5">
    <%= f.submit "購入を確定する", class: "btn btn-success btn-lg" %>
    </div>
  </div>

  <% end %>
</div>
