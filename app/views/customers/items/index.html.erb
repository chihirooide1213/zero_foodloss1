
<div class="container">
	<h1>商品一覧</h1>

	<table class="table">
		<% @items.each do |item| %>
			<tr>
				<th>商品名</th>
				<td>
					<%= link_to item.name, customers_item_path(item) %>
				</td>
			</tr>
			<tr>
				<th><%= attachment_image_tag item,:item_image,:fill, 100, 100, format: "jpeg" %></th>
			</tr>
			<tr>
				<th>商品説明文</th>
				<td><%= item.introduction %></td>
			</tr>
			<tr>
				<th>価格</th>
				<td><%= item.price %>円</td>
			</tr>
		<% end %>
	</table>
</div>
