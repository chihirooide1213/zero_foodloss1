
<div class="container">
	<h1>商品一覧</h1>
		<div class="item-box col-xs-8 col-md-8 col-lg-8 col-xl-8">
			<% @items.each do |item| %>
				 <div class="item-box-child">
					<div class="item-image">
						<%= attachment_image_tag item, :item_image,:fill, 100, 100, format: "jpeg" %>
					</div>
					<div class="client-shop">
						店名:<%= item.client.shop_name %>
					</div>
					<div class="item-name">
						<%= link_to item.name, customers_item_path(item) %>
					</div>
					<div class="item-introduction">
						<%= item.introduction %>
					</div>
					<div class="item-price">
						<%= item.price %>円
					</div>
					<% if customer_signed_in? %>
						<% if item.favorited_by?(current_customer) %>
						    <%=link_to clients_item_favorites_path(item.id), method: :delete do %>
						        <i class="far fa-heart unlike-btn" ></i><%= item.favorites.count %>
						    <% end %>
						 <% else %>
						    <%=link_to clients_item_favorites_path(item.id), method: :post do %>
						        <i class="far fa-heart like-btn" ></i><%= item.favorites.count %>
						     <% end %>
						<% end %>
					<% end %>
				</div>
			<% end %>
		</div>
</div>

